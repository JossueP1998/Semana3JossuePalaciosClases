<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana3JossuePalaciosClases.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Semana 3 ventana login y GitHub" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry x:Name="txtUser" Placeholder="Ingrese el usuario"></Entry>
        <Entry x:Name="txtPass" Placeholder="Ingrese la contraseña" IsPassword="True"></Entry>
        

        <Button x:Name="btnAbrir"
                Text="Abrir ventana dos"
                Clicked="btnAbrir_Clicked"></Button>
        
                
        
    </StackLayout>

</ContentPage>
